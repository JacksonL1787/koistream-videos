.videoStudio-wrapper
	width 100%
	height 100vh
	background #f5f7fb

.videoStudio-wrapper-modal
	width 1200px
	height 800px
	background white
	border-radius 25px
	-webkit-box-shadow: 0px 0px 11px 0px rgba(0,0,0,0.05);
	-moz-box-shadow: 0px 0px 11px 0px rgba(0,0,0,0.05);
	box-shadow: 0px 0px 11px 0px rgba(0,0,0,0.05);

.videoStudio-wrapper-modal-header
	width 100%
	height 150px
	position relative

.videoStudio-wrapper-modal-header-txt
	left 5%
	h3
		font-size: 28px;
	p
		font-size 15px
		color #b0afb5
		margin-top 4px
		font-weight 100

.videoStudio-wrapper-modal-body
	width 90%
	height calc(100% - 150px)

// Progress Bar

.videoStudio-wrapper-modal-body-progressBar
	width 400px
	height 20px
	border-radius 3px
	background #f5f7fb
	overflow hidden

.videoStudio-wrapper-modal-body-progressBar-fill
	width 0%
	transition .5s
	height 100%
	background lightblue