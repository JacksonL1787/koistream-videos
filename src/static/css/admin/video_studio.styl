.videoStudio-wrapper
	width 100%
	height 100vh
	background #f5f7fb

.videoStudio-wrapper-modal
	width 1100px
	height 800px
	background white
	border-radius 25px
	-webkit-box-shadow: 0px 0px 11px 0px rgba(0,0,0,0.05);
	-moz-box-shadow: 0px 0px 11px 0px rgba(0,0,0,0.05);
	box-shadow: 0px 0px 11px 0px rgba(0,0,0,0.05);

.videoStudio-wrapper-modal-header
	width 100%
	height 150px
	position relative

.videoStudio-wrapper-modal-header-txt
	left 5%
	h3
		font-size: 32px;
	p
		font-size 15px
		color #b0afb5
		margin-top 4px
		font-weight 100

.videoStudio-wrapper-modal-body
	width 100%
	height calc(100% - 150px)

// Progress Bar

.videoStudio-wrapper-modal-body-progressBar
	width 100%
	height 20px
	border-radius 0px 0px 25px 25px
	background white
	overflow hidden
	position absolute 
	bottom 0px

.videoStudio-wrapper-modal-body-progressBar-fill
	width 0%
	transition .5s
	height 100%
	background lightblue

// Form Styling

.videoStudio-wrapper-modal-body-container
	width 90%
	height 95%

.videoStudio-wrapper-modal-body-container-uploadWrap
	width 100%
	height 200px
	display flex
	.videoStudio-wrapper-modal-body-container-uploadWrap-videoUpload
		width 60%
		height 100%
		cursor pointer
		background white
		transition .3s
		&:hover
			background #f5f7fb
			.videoStudio-wrapper-modal-body-container-uploadWrap-videoUpload-ceOD
				transform scale(1.03) translateY(-50%)
				margin-left 2%
		.videoStudio-wrapper-modal-body-container-uploadWrap-videoUpload-ceOD
			width fit-content
			height fit-content
			display flex
			transition .3s
			.videoStudio-wrapper-modal-body-container-uploadWrap-videoUpload-ceOD-icon
				width 40px
				height 40px
				background-image url('/img/icons/uploadVideo_filled.svg')
			p
				font-size: 15px;
				margin-left: 15px;
				margin-top: 11px;
				letter-spacing: -0.3px;
				font-weight: 500;
				color: #cccccc;

	.videoStudio-wrapper-modal-body-container-uploadWrap-thumbnailUpload
		width 40%
		height 100%
		input[type="button"]
			width: 230px;
			height: 60px;
			border-radius: 8px;
			border: none;
			background-color: #27c7a2;
			outline: none;
			color: white;
			font-size: 15px;
			font-weight: 400;
			letter-spacing: 0.8px;
			cursor: pointer;

.videoStudio-wrapper-modal-body-container-optionsWrap
	width 100%
	height calc(80% - 200px)
	.videoStudio-wrapper-modal-body-container-optionsWrap-navbar
		width 100%
		height 60px
		display flex
		overflow hidden
		.videoStudio-wrapper-modal-body-container-optionsWrap-navbar-lhr
			width 100%
			height 2px
			background #f3f3f3
			position absolute 
			bottom 0px

.videoStudio-wrapper-modal-body-container-optionsWrap-navbar-object
	width fit-content
	cursor pointer
	height 100%
	&:hover
		.dnaj
			color black
			font-weight 500
	&.active
		.videoStudio-wrapper-modal-body-container-optionsWrap-navbar-object-lhr
			height 3px
		.dnaj
			color black
			font-weight 500

.videoStudio-wrapper-modal-body-container-optionsWrap-navbar-object-lhr
	width 100%
	height 0px
	transition .3s
	background #27c7a2
	bottom 0px
	position absolute
	z-index 10
.dnaj
	padding-left 30px
	padding-right 30px
	font-weight 100
	transition .3s
	position relative !important
	letter-spacing -0.5px
	color gray

.videoStudio-wrapper-modal-body-container-pubWrap
	width 100%
	height 20%
	input 	
		width: 220px;
		height: 50px;
		border: none;
		outline: none;
		background: #60aaff;
		color: white;
		border-radius: 5px;
		cursor: pointer;

.videoStudio-wrapper-modal-body-container-optionsWrap-body
	width 100%
	height calc(100% - 60px)
	display none
	&.active
		display block
	.videoStudio-wrapper-modal-body-container-optionsWrap-body-wrapper
		width 100%
		height fit-content
		display flex
		justify-content space-between
		select 
			border-radius: 10px;
			width: 30%;
			height: 60px;
			padding-left: 20px;
			border: 1px solid gray;
			outline none
			color: gray;
		.title
			width: 30%;
			height: 60px;
			padding-left: 20px;
			border: 1px solid gray;
			border-radius: 10px;
			font-size: 15px;
			font-weight: 300;
			outline: none;
		.desc
			width: 65%;
			border: 1px solid gray;
			padding-left: 20px;
			padding-top: 19px;
			border-radius: 10px;
			resize: none;
			outline: none;
			font-size: 15px;
			font-weight: 300
		.p_title
			position absolute
			top: -29px;
			font-weight: 300;
			color: #bdbdbd;
			font-size: 15px;
			letter-spacing: -0.5px;
		.p_desc
			position absolute
			left 35%
			top: -29px;
			font-weight: 300;
			color: #bdbdbd;
			font-size: 15px;
			letter-spacing: -0.5px;
		.p_privacy, .p_dos
			position absolute
			left 0%
			top: -29px;
			font-weight: 300;
			color: #bdbdbd;
			font-size: 15px;
			letter-spacing: -0.5px;
		.p_category
			position absolute
			left 35%
			top: -29px;
			font-weight: 300;
			color: #bdbdbd;
			font-size: 15px;
			letter-spacing: -0.5px;
		.p_nbe
			position absolute
			left 70%
			top: -29px;
			font-weight: 300;
			color: #bdbdbd;
			font-size: 15px;
			letter-spacing: -0.5px;

		.i_sii
			border-radius: 10px;
			width: 30%;
			height: 60px;
			outline none
			padding-left: 20px;
			border: 1px solid gray;
			color: gray;

.videoBottomSSA	
	top: -20px;
	position: relative;
	font-weight: 300;
	letter-spacing: 0.5px;
	font-size 14px

.videoStudio-wrapper-modal-body-container-pubWrap-center
	width fit-content
	height fit-content
	display flex
	p
		height: fit-content;
		margin-left: 40px;
		margin-top: 13px;
		font-size: 15px;
		color: #b5b5b5;
		margin-right: 40px;
	a
		color #60aaff
		height: fit-content;
		margin-top: 15px;
		font-size: 15px;
		text-decoration: underline !important;


.videoStudio-wrapper-modal-body-dimer
	width: 100%;
	height: 100%;
	/* background: black; */
	position: absolute;
	top: 0px;
	z-index: 1;
	display none