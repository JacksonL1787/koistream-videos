	height 100%
	&:nth-child(1)
		width 23%
	&:nth-child(2)
		width 8%
	&:nth-child(3)
		width 13%
	&:nth-child(4)
		width 13%
	&:nth-child(5)
		width 10%
	&:nth-child(6)
		width 10%
	&:nth-child(7)
		width 23%

	p
		margin-left 30px
		font-size 14px
		
.adminHome-nav-container-user-avatar-snn		
	width 38px
	height 38px
	border-radius 50%

.adminHome-body-s1-objects-container-a-obj-sect-userAvatar
	width 42px
	height 42px
	background-color #eef3fd
	border-radius 50%
	margin-left 25px

.adminHome-nav-container-user-avatar
	width 38px
	height 38px
	border-radius 50%

.adminHome-body-s1-objects-container-a-obj-sect-buttonsWrap
	display flex
	margin-left 35px
	width calc(100% - 35px)
	input
		width 40%
		height 40px
		border 2px solid #2860ff
		background transparent 
		outline none 
		color #2860ff
		border-radius 5px
		cursor pointer
		margin-left 5px
		transition .3s
		&:hover
			color white
			background #2860ff
			&:nth-child(2)
				background red
				border 2px solid red
			

// Sidebar

.adminHome-body-sidebar
	width 25%
	height 100%
	position absolute
	right -25%
	bottom 0px
	background white
	z-index 8
	transition .5s
	-webkit-box-shadow: 0px 0px 20px 0px rgba(0,0,0,0.33);
	-moz-box-shadow: 0px 0px 20px 0px rgba(0,0,0,0.33);
	box-shadow: 0px 0px 20px 0px rgba(0,0,0,0.33);
	&.active
		right 0px

.adminHome-body-fill
	width 100%
	height 100%
	position absolute 
	bottom 0px
	background black 
	opacity 0
	z-index 7
	transition .5s
	display none 
	&.active
		opacity .3
	
.adminHome-body-sidebar-header
	width 100%
	height 150px
	h4
		right 20px
		font-size: 24px;
		font-weight: 300;