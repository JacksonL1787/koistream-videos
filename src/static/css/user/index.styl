body
    background #132027

#main
    width 95%
    margin 40px auto 0
    .page-title
        font-weight 800
        letter-spacing .3px
        font-size 25px
        color white
    .videos-container
        width 100%
        margin-top 40px
        .video
            width 300px
            cursor pointer
            display block
            &:hover
                .thumbnail-overlay
                    opacity 1 !important
            .video-thumbnail-wrap
                position relative
                width fit-content
                height fit-content
                .thumbnail-overlay
                    width 100%
                    height 100%
                    position absolute
                    top 0
                    left 0
                    opacity 0
                    background-color rgba(0,0,0,0.5)
                    transition opacity .3s
                    .play-icon
                        width 20px
                        height 20px
                        top 50%
                        left 50%
                        transform translate(-50%, -50%)
                        position absolute
                        background-image url("/img/play.svg")
                        background-size cover
                        background-repeat no-repeat
                        background-position center
                .thumbnail
                    width 300px
            h1.title
                margin-top 10px
                font-size 1.2rem
                letter-spacing .3px
                font-weight 500
                color white
                display inline-block
                width 300px
            p.date
                color #949494
                font-size .8rem
                letter-spacing .3px
                font-weight 400
                display inline-block
                width 300px
