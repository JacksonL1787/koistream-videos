body
    background #0e1013

.no-video
    color white
    font-size 35px
    letter-spacing .5px
    text-align center
    margin 50px 0
    display none

.disclaimer
    text-align center
    margin 40px 0 20px
    color lightgrey
    font-weight 300
    font-size 25px

.video-player
    width fit-content
    height fit-content
    margin 0 auto
    #video
        width 100% !important
        height 100% !important
        position absolute !important
        top 0 !important
        left 0 !important
    img
        max-width 1100px
        width 90vw

.video-information
    width 90vw
    max-width 1100px
    margin 30px auto
    box-shadow 0 0 12px 0 rgba(0,0,0,0.1)
    .container-content
        padding 30px 20px
        position relative
        .title-views-wrap
            display flex
            justify-content space-between
            flex-flow nowrap row
            .title
                color white
                letter-spacing .3px
                word-break: break-all
                margin-right 30px
            .views
                color #F26542
                font-size 17px
                min-width fit-content
                margin-top 11px
                letter-spacing .3px
                text-shadow 0 0 5px #d15536
        .description-wrap
            margin 20px 0 0
            p.description
                color lightgrey
                font-size 16px
                line-height 140%
                letter-spacing .3px

@media only screen and (max-width: 750px)
    .video-information
        .title
            font-size 25px !important
        .views
            font-size 16px !important
            margin-top 5px !important
        .description
            font-size 15px !important