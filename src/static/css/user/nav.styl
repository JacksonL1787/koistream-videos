.nav
    width 100%
    height 90px
    z-index 5
    .nav-content
        width 95%
        margin 0 auto
        height 100%
        position relative
        .title-wrap
            display flex
            justify-content left
            align-items center
            position absolute
            left 20px
            top 50%
            transform translateY(-50%)
            .logo
                background-image url("/img/dtech-logo.png")
                background-size cover
                background-position center
                background-repeat no-repeat
                width 37px
                height 37px
                margin-right 10px
            .title
                color white
                font-size 24px
                letter-spacing .3px
                margin 0 10px 0 0
            .page-title
                border #FD5319 1px solid
                background rgba(253, 82, 25, 0.18)
                color #FD5319
                padding 2px 8px
                text-transform uppercase
                font-size 11px
                letter-spacing .3px
                margin-top 1px
                border-radius .3em
                box-shadow 0 0 7px 0 rgba(253, 82, 25, 0.5)