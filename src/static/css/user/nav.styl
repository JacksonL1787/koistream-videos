.nav
    width 100%
    height 65px
    background #0d171d
    box-shadow 0 0 12px 0 rgba(0,0,0,0.1)
    z-index 5
    .nav-content
        width 95%
        margin 0 auto
        height 100%
        position relative
        .title-wrap
            display flex
            justify-content left
            align-items center
            position absolute
            left 0
            top 50%
            transform translateY(-50%)
            .logo
                background-image url("/img/dtech-logo.png")
                background-size cover
                background-position center
                background-repeat no-repeat
                width 37px
                height 37px
                margin-right 10px
            .title
                color white
                font-size 24px
                letter-spacing .3px
                margin 0